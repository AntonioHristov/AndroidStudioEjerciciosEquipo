<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible"
    >
    <!-- QUISE DARLE PADDING A LA CALCULADORA PERO CON PADDING BOTTOM ME DA PROBLEMAS AL GIRAR EL MOVIL CON MUCHO TAMAÃ‘O...-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTVSecundario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/idTVPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textAlignment="textEnd"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:backgroundTint="#DCDCDC"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/idBCambioSigno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="+/-" />

                <Button
                    android:id="@+id/idBCE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="CE" />

                <Button
                    android:id="@+id/idBC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="C" />

                <Button
                    android:id="@+id/idBRetroceso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="Supr"
                    android:textSize="16sp" />

            </TableRow>

            <TableRow
                android:padding="8dp"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/idB7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="7" />

                <Button
                    android:id="@+id/idB8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="8" />

                <Button
                    android:id="@+id/idB9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="9" />

                <Button
                    android:id="@+id/idBDiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="/" />

            </TableRow>

            <TableRow
                android:padding="8dp"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/idB4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="4" />

                <Button
                    android:id="@+id/idB5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="5" />

                <Button
                    android:id="@+id/idB6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="6" />

                <Button
                    android:id="@+id/idBMul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="X" />

            </TableRow>

            <TableRow
                android:padding="8dp"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/idB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="1" />

                <Button
                    android:id="@+id/idB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="2" />

                <Button
                    android:id="@+id/idB3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="3" />

                <Button
                    android:id="@+id/idBRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="-" />

            </TableRow>

            <TableRow
                android:padding="8dp"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/idBPunto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="." />

                <Button
                    android:id="@+id/idB0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="0" />

                <Button
                    android:id="@+id/idBIgual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="=" />

                <Button
                    android:id="@+id/idBSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:padding="8dp"
                    android:text="+" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

</LinearLayout>