<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/opi"
    android:orientation="vertical"
    tools:context=".Vista.Jugar.JugandoInfoCartaActivity">

    <ImageView
        android:id="@+id/ivImagenJugandoInfoCarta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/carta_vacia" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tvDescripcionJugandoInfoCarta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="50sp"
            android:textStyle="bold" />
    </ScrollView>

    <Button
        android:id="@+id/bSeguirJugandoInfoCarta"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:autoSizeTextType="uniform"
        android:text="Seguir Jugando" />
</LinearLayout>